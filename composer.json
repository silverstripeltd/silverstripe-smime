{
    "name": "silverstripe/smime",
    "description": "Provides support for using S/MIME with the standard Silverstripe Email API.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS",
        "smime",
        "email"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.0 || ^8.1",
        "silverstripe/framework": "^4.9",
        "ext-openssl": "*",
        "silverstripe/cms": "^4.11"
    },
    "authors": [
        {
            "name": "Frank Mullenger",
            "email": "frank@silverstripe.com"
        },
        {
            "name": "Danae Miller-Clendon",
            "email": "danae.millerclendon@silverstripe.com"
        },
        {
            "name": "Andrew Dunn",
            "email": "andrew.dunn@silverstripe.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^8.8"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\SMIME\\": "src/",
            "SilverStripe\\SMIME\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
